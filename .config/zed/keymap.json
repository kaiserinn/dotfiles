// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "EmptyPane || (Editor && vim_mode == normal)",
    "bindings": {
      "space l g": ["task::Spawn", { "task_name": "Open Lazygit" }],
      "space x": "pane::CloseActiveItem",
      "space f f": "file_finder::Toggle",
      "space n": "workspace::ToggleLeftDock",
      "space g p": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space n": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "q": "workspace::ToggleLeftDock",
      "p": "project_panel::Paste",
      "y": "project_panel::Copy",
      "x": "project_panel::Cut",
      "a": "project_panel::NewFile",
      "shift-a": "project_panel::NewDirectory",
      "d": ["project_panel::Trash", { "skip_prompt": false }],
      "r": "project_panel::Rename",
      "enter": ["workspace::SendKeystrokes", "enter q"]
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      "q": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-shift-q": "pane::CloseActiveItem",
      "ctrl-shift-t": "workspace::NewTerminal",
      "alt-t": "workspace::ToggleBottomDock",
      "ctrl-x": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space l g": ["task::Spawn", { "task_name": "Open Lazygit" }],
      "alt-k": [
        "workspace::SendKeystrokes",
        ": movelineup enter : autoindent enter"
      ],
      "alt-j": [
        "workspace::SendKeystrokes",
        ": movelinedown enter : autoindent enter"
      ],
      "space n": "pane::RevealInProjectPanel",
      "space e": "workspace::ToggleLeftDock",
      "shift-l": "pane::ActivateNextItem",
      "shift-h": "pane::ActivatePreviousItem",
      "space x": "pane::CloseActiveItem",
      "space f f": "file_finder::Toggle",
      "space d d": "diagnostics::Deploy",
      "alt-t": "workspace::ToggleBottomDock",
      "ctrl-a": "editor::SelectAll",
      "space r a": "editor::Rename",
      "space f m": "editor::Format",
      "space d l": "editor::GoToDiagnostic",
      "space d h": "editor::GoToPreviousDiagnostic",
      "ctrl-j": ["workspace::SendKeystrokes", "5 j"],
      "ctrl-k": ["workspace::SendKeystrokes", "5 k"],
      "ctrl-d": [
        "workspace::SendKeystrokes",
        ": vimscrolldown enter : scrollcursorcenter enter"
      ],
      "ctrl-u": [
        "workspace::SendKeystrokes",
        ": vimscrollup enter : scrollcursorcenter enter"
      ]
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": ["vim::PushAddSurrounds", {}],
      "alt-k": "editor::MoveLineUp",
      "alt-j": "editor::MoveLineDown",
      "p": ["vim::Paste", { "preserve_clipboard": true }],
      "shift-p": "vim::Paste"
    }
  },
  {
    "context": "GitPanel || ProjectPanel || CollabPanel || OutlinePanel || ChatPanel || VimControl || EmptyPane || SharedScreen || MarkdownPreview || KeyContextView",
    "bindings": {
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-h": "workspace::ActivatePaneLeft"
    }
  }
]
